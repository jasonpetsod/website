#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. /about/ for the file
#   "/content/about.html"). To select all children, grandchildren, of an
#   item, use the pattern "/about/*/"; "/about/*" will also select the parent,
#   because "*" matches zero or more characters.

compile '/css/blueprint/*' do
    # nothing
end

compile '/assets/*' do
    # nothing
end

compile '/css/*/' do
    filter :sass
end

preprocess do
    items.each do |item|
        # set default attributes
        item.attributes = {
            :stylesheets => [],
            :tags => [],
        }.merge(item.attributes)

        # FIXME: change recipe tag from 'recipes' to 'recipe'
        if item[:tags].include? 'recipes' then
            item[:stylesheets] << 'recipe'
        end
    end
end

# compilation rules for individual recipes; don't include the recipes index
# page
compile '/recipes/(?!index)+' do
    layout 'recipe'
    filter :erb
    filter :kramdown
    layout 'default'
end

compile '*' do
  filter :erb
  filter :kramdown
  layout 'default'
end

route '/assets/*' do
    item.identifier.chop + '.' + item[:extension]
end

route '/css/*/' do
    item.identifier.chop + '.css'
end

route '*' do
  item.identifier + 'index.html'
end

layout '*', :erb
